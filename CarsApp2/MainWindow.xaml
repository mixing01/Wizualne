<Window x:Class="GamesDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamesDesktopApp"
        xmlns:interfaces="clr-namespace:Interfaces;assembly=Interfaces"
        xmlns:system="clr-namespace:System;assembly=netstandard" xmlns:viewmodels="GamesDesktopApp.ViewModels" xmlns:viewmodels1="clr-namespace:GamesDesktopApp.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels1:GameListViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="1200" MinWidth="1200" MinHeight="400"
        Name ="Okno">
    <Window.Resources>
        <ObjectDataProvider x:Key="ContinentDP"
                    ObjectType="{x:Type system:Enum}"
                    MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="{x:Type interfaces:Continent}"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>


        <ObjectDataProvider x:Key="GenreDP"
                            ObjectType="{x:Type system:Enum}"
                            MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="{x:Type interfaces:GameGenre}"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <Style x:Key="TextBoxWithErrors" TargetType="{x:Type TextBox}">
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <DockPanel LastChildFill="True">
                            <ListBox DockPanel.Dock="Bottom" Name="lstErrors" ItemsSource="{Binding ElementName=ErrComponent, Path=AdornedElement.(Validation.Errors)}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ErrorContent}" Foreground="Orange" FontSize="9pt"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Border BorderBrush="Red" BorderThickness="0">
                                <AdornedElementPlaceholder Name="ErrComponent"/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="Margin" Value="0 0 0 20"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0" Grid.Row="0">
            <ListBox d:DataContext="{d:DesignInstance Type=viewmodels1:GameListViewModel}" Name="ListaGier"  DockPanel.Dock="Left" ItemsSource="{Binding Games}"
             SelectedItem="{Binding SelectedGame}"
             Width="140">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="2" BorderBrush="Black">

                            <StackPanel Width="100">
                                <TextBlock Text="{Binding Id}" Margin="2"/>
                                <TextBlock Text="{Binding Name}" Margin="2" TextTrimming="CharacterEllipsis"/>
                                <TextBlock HorizontalAlignment="Right" Text="{Binding ReleaseYear}" Margin="2"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
                <Button d:DataContext="{d:DesignInstance Type=viewmodels1:GameListViewModel}" Content="Add New Game" Command="{Binding AddNewGameCommand}" Margin="5"/>
                <Button d:DataContext="{d:DesignInstance Type=viewmodels1:GameListViewModel}" Content="Save Game" Command="{Binding SaveGameCommand}" Margin="5"/>
                <Button d:DataContext="{d:DesignInstance Type=viewmodels1:GameListViewModel}" Content="Cancel" Command="{Binding UndoChangesCommand}" Margin="5"/>
                <TextBox d:DataContext="{d:DesignInstance Type=viewmodels1:GameListViewModel}" MinWidth="80" Height="20" Text="{Binding FilterGames}"/>
                <Button d:DataContext="{d:DesignInstance Type=viewmodels1:GameListViewModel}" Content="Filter" Command="{Binding FilterGamesDataCommand}" Margin="5"/>
            </StackPanel>

            <StackPanel>
                <Label HorizontalAlignment="Center" FontSize="20" FontWeight="ExtraBold">GAMES</Label>
                <Grid d:DataContext="{d:DesignInstance Type=viewmodels1:GameViewModel}" DataContext="{Binding EditedGame}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*"/>
                        <ColumnDefinition Width="1*" MinWidth="100"/>
                        <ColumnDefinition Width="1*" MinWidth="100"/>
                        <ColumnDefinition Width="1*" MinWidth="100"/>
                        <ColumnDefinition Width="1*" MinWidth="100"/>
                        <ColumnDefinition Width="0.3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--Label Row 1-->

                    <Label Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="4">Title</Label>
                    <!--Field Row 1-->
                    <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4" Text="{Binding Name}" Style="{StaticResource TextBoxWithErrors}" MaxHeight="20"></TextBox>

                    <!--Label Row 2-->
                    <Label Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2">Producer</Label>
                    <Label Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2">Genre</Label>
                    <!--Field Row 2-->
                    <ComboBox MaxHeight="20" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" ItemsSource="{Binding ElementName=Okno, Path=DataContext.Producers}" DisplayMemberPath="Id" SelectedItem="{Binding Producer}"/>
                    <ComboBox MaxHeight="20"  Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="2" ItemsSource="{Binding Source={StaticResource GenreDP}}" Text="{Binding Genre}"></ComboBox>

                    <!--Label Row 3-->
                    <Label Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2">Release year</Label>
                    <Label Grid.Column="3" Grid.Row="4" Grid.ColumnSpan="2">Price ($)</Label>
                    <!--Field Row 3-->
                    <TextBox MaxHeight="20" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2" Text="{Binding ReleaseYear}" Style="{StaticResource TextBoxWithErrors}"></TextBox>
                    <TextBox MaxHeight="20" Grid.Column="3" Grid.Row="5" Grid.ColumnSpan="2" Text="{Binding Price}" Style="{StaticResource TextBoxWithErrors}"></TextBox>

                    <!--Label Row 4-->
                    <Label Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="2">Disk space (GB)</Label>
                    <Label Grid.Column="3" Grid.Row="6" Grid.ColumnSpan="2">Rating (1-10)</Label>
                    <!--Field Row 4-->
                    <TextBox MaxHeight="20" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="2" Text="{Binding DiskSpace}" Style="{StaticResource TextBoxWithErrors}"></TextBox>
                    <TextBox MaxHeight="20" Grid.Column="3" Grid.Row="7" Grid.ColumnSpan="2" Text="{Binding Rating}" Style="{StaticResource TextBoxWithErrors}"></TextBox>


                </Grid>
            </StackPanel>

        </DockPanel>
        <Canvas Grid.Column="1" Background="Black"/>
        <DockPanel Grid.Column="2" Grid.Row="0">
            <ListBox  DockPanel.Dock="Right" ItemsSource="{Binding Producers}"
         SelectedItem="{Binding SelectedProducer}"
         Width="140">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="2" BorderBrush="Black">

                            <StackPanel Width="100">
                                <TextBlock Text="{Binding Id}" Margin="2"/>
                                <TextBlock Text="{Binding Name}" Margin="2" TextTrimming="CharacterEllipsis"/>
                                <TextBlock HorizontalAlignment="Right" Text="{Binding Continent}" Margin="2"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
                <Button d:DataContext="{d:DesignInstance Type=viewmodels1:GameListViewModel}" Content="Add New Producer" Command="{Binding AddNewProducerCommand}" Margin="5"/>
                <Button Content="Save Producer" Command="{Binding SaveProducerCommand}" Margin="5"/>
                <Button Content="Cancel" Command="{Binding UndoProducersChangesCommand}" Margin="5"/>
                <TextBox MinWidth="80" Height="20" Text="{Binding FilterProducers}"/>
                <Button Content="Filter" Command="{Binding FilterProducersDataCommand}" Margin="5"/>
            </StackPanel>

            <StackPanel>
                <Label HorizontalAlignment="Center" FontSize="20" FontWeight="ExtraBold">PRODUCERS</Label>
                <Grid DataContext="{Binding EditedProducer}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--Label Row 1-->
                    <Label Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="4">Title</Label>
                    <!--Field Row 1-->
                    <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4" Text="{Binding Name}" Style="{StaticResource TextBoxWithErrors}"></TextBox>

                    <!--Label Row 2-->
                    <Label Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2">Established year</Label>
                    <Label Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2">Continent</Label>
                    <!--Field Row 2-->
                    <TextBox Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Text="{Binding EstYear}" Style="{StaticResource TextBoxWithErrors}"></TextBox>
                    <ComboBox  Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="2" ItemsSource="{Binding Source={StaticResource ContinentDP}}" Text="{Binding Continent}"></ComboBox>
                    
                </Grid>
            </StackPanel>

        </DockPanel>
    </Grid>
    
</Window>
