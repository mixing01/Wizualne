@model Interfaces.IProducer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Producer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Established Year</label>
                <input asp-for="EstYear" class="form-control" />
                <span asp-validation-for="EstYear" class="text-danger"></span>
            </div>
            <div class="form-group">
	            <label asp-for="Continent" class="control-label"></label>
                <select asp-for="Continent" class="form-control" asp-items="Html.GetEnumSelectList<Interfaces.Continent>()"></select>
                <span asp-validation-for="Continent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
